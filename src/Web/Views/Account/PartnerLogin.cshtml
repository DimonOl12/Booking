@model Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Вхід партнера";
}

<div class="auth-page">
    <div class="auth-bg">
        <div class="auth-bg-left"></div>
        <div class="auth-bg-right"></div>
    </div>

    @await Html.PartialAsync("_Navbar")

    <main class="auth-content">
        <div class="auth-card">
            <div class="auth-card-body">

                <h1 class="auth-title">Увійдіть в акаунт, щоб керувати готельним об&#8217;єктом</h1>

                <form asp-action="PartnerLogin" asp-controller="Account" method="post" style="margin-top: 24px;">
                    <div class="form-group">
                        <div class="form-label-row">
                            <label class="form-label" for="Email">Електронна адреса</label>
                        </div>
                        <div class="input-wrapper">
                            <input type="email" class="form-input" id="Email" name="Email" placeholder="Введіть свою електронну адресу" asp-for="Email" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-label-row">
                            <label class="form-label" for="Password">Пароль</label>
                            <a href="@Url.Action("ForgotPassword", "Account")" class="form-label-link">Забули пароль?</a>
                        </div>
                        <div class="input-wrapper">
                            <input type="password" class="form-input has-toggle" id="Password" name="Password" placeholder="Введіть пароль" asp-for="Password" />
                            <button type="button" class="password-toggle" aria-label="Показати пароль">
                                <svg class="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
                                    <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
                                    <line x1="1" y1="1" x2="23" y2="23"/>
                                </svg>
                                <svg class="eye-closed" style="display:none" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="btn-center">
                        <button type="submit" class="btn-primary">Продовжити</button>
                    </div>
                </form>

                <div class="divider-section">
                    <p class="divider-text">Ще не зареєстровані?</p>
                    <a href="@Url.Action("PartnerRegister", "Account")" class="btn-outline">Створення акаунту партнера</a>
                </div>

            </div>

            @await Html.PartialAsync("_Footer")
        </div>
    </main>
</div>
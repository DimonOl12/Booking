@model Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація партнера";
}

<div class="auth-page">
    <div class="auth-bg">
        <div class="auth-bg-left"></div>
        <div class="auth-bg-right"></div>
    </div>

    @await Html.PartialAsync("_Navbar")

    <main class="auth-content">
        <div class="auth-card">
            <div class="auth-card-body">

                <!-- Крок 1: Email -->
                <div id="partner-step-1">
                    <div class="step-indicator">
                        <div class="step-item active">1</div>
                        <div class="step-item">2</div>
                        <div class="step-item">3</div>
                        <div class="step-item">4</div>
                    </div>

                    <h1 class="auth-title">Створення акаунта партнера</h1>
                    <p class="auth-subtitle">Створіть акаунт, щоб зареєструвати та керувати своїм помешканням.</p>

                    <form id="partner-form-step1">
                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="PartnerEmail">Електронна адреса</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="email" class="form-input" id="PartnerEmail" placeholder="Введіть свою електронну адресу" />
                            </div>
                        </div>

                        <div class="btn-center">
                            <button type="button" class="btn-primary" onclick="goToPartnerStep(2)">Продовжити</button>
                        </div>
                    </form>

                    <div class="divider-section">
                        <p class="divider-text">Вже маєте акаунт?</p>
                        <a href="@Url.Action("PartnerLogin", "Account")" class="btn-outline">Увійти</a>
                    </div>
                </div>

                <!-- Крок 2: Особисті дані -->
                <div id="partner-step-2" style="display: none;">
                    <div class="step-indicator">
                        <div class="step-item completed">1</div>
                        <div class="step-item active">2</div>
                        <div class="step-item">3</div>
                        <div class="step-item">4</div>
                    </div>

                    <h1 class="auth-title">Особисті дані</h1>
                    <p class="auth-subtitle">Введіть ваші особисті дані для створення акаунту партнера.</p>

                    <form id="partner-form-step2">
                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="FirstName">Ім&#8217;я</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="text" class="form-input" id="FirstName" placeholder="Введіть ваше ім&#8217;я" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="LastName">Прізвище</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="text" class="form-input" id="LastName" placeholder="Введіть ваше прізвище" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="Phone">Телефон</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="tel" class="form-input" id="Phone" placeholder="+380 __ ___ __ __" />
                            </div>
                        </div>

                        <div class="btn-row">
                            <button type="button" class="btn-back" onclick="goToPartnerStep(1)" aria-label="Назад">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                                </svg>
                            </button>
                            <button type="button" class="btn-primary btn-wide" onclick="goToPartnerStep(3)">Продовжити</button>
                        </div>
                    </form>
                </div>

                <!-- Крок 3: Пароль -->
                <div id="partner-step-3" style="display: none;">
                    <div class="step-indicator">
                        <div class="step-item completed">1</div>
                        <div class="step-item completed">2</div>
                        <div class="step-item active">3</div>
                        <div class="step-item">4</div>
                    </div>

                    <h1 class="auth-title">Створіть пароль</h1>
                    <p class="auth-subtitle">Створіть надійний пароль для вашого акаунту.</p>

                    <form id="partner-form-step3">
                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="PartnerPassword">Пароль</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="password" class="form-input has-toggle" id="PartnerPassword" placeholder="Введіть пароль" />
                                <button type="button" class="password-toggle" aria-label="Показати пароль">
                                    <svg class="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
                                        <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
                                        <line x1="1" y1="1" x2="23" y2="23"/>
                                    </svg>
                                    <svg class="eye-closed" style="display:none" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="PartnerConfirmPassword">Підтвердження паролю</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="password" class="form-input has-toggle" id="PartnerConfirmPassword" placeholder="Підтвердіть свій пароль" />
                                <button type="button" class="password-toggle" aria-label="Показати пароль">
                                    <svg class="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
                                        <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
                                        <line x1="1" y1="1" x2="23" y2="23"/>
                                    </svg>
                                    <svg class="eye-closed" style="display:none" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="btn-row">
                            <button type="button" class="btn-back" onclick="goToPartnerStep(2)" aria-label="Назад">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                                </svg>
                            </button>
                            <button type="button" class="btn-primary btn-wide" onclick="goToPartnerStep(4)">Продовжити</button>
                        </div>
                    </form>
                </div>

                <!-- Крок 4: Успіх -->
                <div id="partner-step-4" style="display: none;">
                    <div class="step-indicator">
                        <div class="step-item completed">1</div>
                        <div class="step-item completed">2</div>
                        <div class="step-item completed">3</div>
                        <div class="step-item active">4</div>
                    </div>

                    <div class="success-icon">
                        <svg fill="none" stroke="white" viewBox="0 0 24 24" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>

                    <h1 class="auth-title">Акаунт створено!</h1>
                    <p class="auth-subtitle">Ваш акаунт партнера успішно створено. Тепер ви можете увійти.</p>

                    <div class="btn-center">
                        <a href="@Url.Action("PartnerLogin", "Account")" class="btn-primary">Увійти</a>
                    </div>
                </div>

            </div>

            @await Html.PartialAsync("_Footer")
        </div>
    </main>
</div>

@section Scripts {
<script>
    function goToPartnerStep(step) {
        document.getElementById('partner-step-1').style.display = 'none';
        document.getElementById('partner-step-2').style.display = 'none';
        document.getElementById('partner-step-3').style.display = 'none';
        document.getElementById('partner-step-4').style.display = 'none';
        document.getElementById('partner-step-' + step).style.display = 'block';
    }
</script>
}
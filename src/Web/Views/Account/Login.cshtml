@model Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Увійти";
    Layout = null;
}
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reservio - Увійти</title>
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-page-figma">

        <!-- Background Image -->
        <div class="auth-hero-bg">
            <img src="~/images/Subtract.jpg" alt="" />
        </div>

        <!-- Top Navbar -->
        <nav class="auth-topbar">
            <a href="/" class="auth-topbar-logo">
                <img src="~/images/icons/Reservio.svg" alt="Reservio" />
            </a>
            <div class="auth-topbar-right">
                <div class="auth-topbar-currency">UAH</div>
                <div class="auth-topbar-flag">
                    <img src="~/images/icons/icon_flag_ua.svg" alt="UA" />
                </div>
                <a href="#" class="auth-topbar-help">
                    <img src="~/images/icons/Help.svg" alt="Допомога" />
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="auth-main-figma">
            <div class="auth-card-figma">

                <!-- Tabs -->
                <div class="auth-tabs-figma">
                    <a href="@Url.Action("Register", "Account")" class="auth-tab-figma">Зареєструватися</a>
                    <a href="@Url.Action("Login", "Account")" class="auth-tab-figma active">Увійти</a>
                </div>

                <!-- Form Content -->
                <div class="auth-form-content">

                    <!-- Heading -->
                    <div style="display:flex;flex-direction:column;align-items:center;gap:16px;">
                        <h1 class="auth-heading-figma">Увійдіть в свій акаунт</h1>
                        <p class="auth-subheading-figma">Ви можете увійти за допомогою свого акаунту на Reservio, щоб скористатися нашими послугами.</p>
                    </div>

                    <!-- Fields -->
                    <div class="auth-fields-group">
                        <!-- Email -->
                        <div class="auth-field">
                            <div class="auth-field-label-row">
                                <label class="auth-field-label" for="Email">Електронна адреса</label>
                            </div>
                            <div class="auth-input-wrapper" id="email-wrapper">
                                <input type="email"
                                       class="auth-input-figma"
                                       id="Email"
                                       name="Email"
                                       placeholder="Введіть свою електронну адресу"
                                       autocomplete="email" />
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="auth-field">
                            <div class="auth-field-label-row">
                                <label class="auth-field-label" for="Password">Пароль</label>
                                <a href="@Url.Action("ForgotPassword", "Account")" class="auth-field-link">Забули пароль?</a>
                            </div>
                            <div class="auth-input-wrapper" id="password-wrapper">
                                <input type="password"
                                       class="auth-input-figma"
                                       id="Password"
                                       name="Password"
                                       placeholder="Введіть пароль"
                                       autocomplete="current-password" />
                                <button type="button" class="auth-eye-toggle" id="toggle-password" aria-label="Показати/Сховати пароль">
                                    <img src="~/images/icons/icon_eye_closed.svg" alt="" id="eye-icon" />
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button (navigates to home without validation) -->
                    <a href="/" class="auth-submit-btn">Продовжити</a>
                </div>

                <!-- Social Login Section -->
                <div class="auth-social-section">
                    <div class="auth-social-block">
                        <span class="auth-social-label">Або увійти з</span>
                        <div class="auth-social-buttons">
                            <button type="button" class="auth-social-btn" aria-label="Увійти через Google">
                                <img src="~/images/icons/google.svg" alt="Google" />
                            </button>
                            <button type="button" class="auth-social-btn" aria-label="Увійти через Apple">
                                <img src="~/images/icons/apple.svg" alt="Apple" />
                            </button>
                            <button type="button" class="auth-social-btn" aria-label="Увійти через Facebook">
                                <img src="~/images/icons/Facebook.svg" alt="Facebook" />
                            </button>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="auth-footer-figma">
                        <p class="auth-footer-text">
                            Входячи в акаунт або створюючи новий, ви погоджуєтеся з нашими
                            <a href="#">Правилами й умовами</a> та <a href="#">Політикою конфіденційності</a>
                        </p>
                        <p class="auth-footer-copy">Усі права захищено.</p>
                        <p class="auth-footer-copy">Copyright (2006 - 2026) - Reservio&#8482;</p>
                    </div>
                </div>

            </div>
        </main>

    </div>

    <script>
        // Toggle password visibility
        (function () {
            var toggleBtn = document.getElementById('toggle-password');
            var passwordInput = document.getElementById('Password');
            var eyeIcon = document.getElementById('eye-icon');

            if (toggleBtn && passwordInput && eyeIcon) {
                toggleBtn.addEventListener('click', function () {
                    var isPassword = passwordInput.type === 'password';
                    passwordInput.type = isPassword ? 'text' : 'password';
                    eyeIcon.src = isPassword
                        ? '/images/icons/icon_eye_open.svg'
                        : '/images/icons/icon_eye_closed.svg';
                });
            }
        })();
    </script>
</body>
</html>
@{
    ViewData["Title"] = "Відновлення паролю";
}

<div class="auth-page">
    <div class="auth-bg">
        <div class="auth-bg-left"></div>
        <div class="auth-bg-right"></div>
    </div>

    @await Html.PartialAsync("_Navbar")

    <main class="auth-content">
        <div class="auth-card">
            <div class="auth-card-body">

                <!-- Крок 1: Email -->
                <div id="step-1">
                    <div class="step-indicator">
                        <div class="step-item active">1</div>
                        <div class="step-item">2</div>
                        <div class="step-item">3</div>
                    </div>

                    <h1 class="auth-title">Відновлення паролю</h1>
                    <p class="auth-subtitle">Введіть свою електронну адресу для відновлення паролю</p>

                    <form id="forgot-step1-form">
                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="ForgotEmail">Електронна адреса</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="email" class="form-input" id="ForgotEmail" placeholder="Введіть свою електронну адресу" />
                            </div>
                        </div>

                        <div class="btn-row">
                            <button type="button" class="btn-back" onclick="history.back()" aria-label="Назад">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                                </svg>
                            </button>
                            <button type="button" class="btn-primary btn-wide" onclick="goToStep(2)">Продовжити</button>
                        </div>
                    </form>
                </div>

                <!-- Крок 2: Новий пароль -->
                <div id="step-2" style="display: none;">
                    <div class="step-indicator">
                        <div class="step-item completed">1</div>
                        <div class="step-item active">2</div>
                        <div class="step-item">3</div>
                    </div>

                    <h1 class="auth-title">Відновлення паролю</h1>
                    <p class="auth-subtitle">Ваш новий пароль має відрізнятися від попереднього</p>

                    <form id="forgot-step2-form">
                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="NewPassword">Пароль</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="password" class="form-input has-toggle" id="NewPassword" placeholder="Введіть пароль" />
                                <button type="button" class="password-toggle" aria-label="Показати пароль">
                                    <svg class="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
                                        <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
                                        <line x1="1" y1="1" x2="23" y2="23"/>
                                    </svg>
                                    <svg class="eye-closed" style="display:none" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-label-row">
                                <label class="form-label" for="ConfirmNewPassword">Пароль</label>
                            </div>
                            <div class="input-wrapper">
                                <input type="password" class="form-input has-toggle" id="ConfirmNewPassword" placeholder="Підтвердіть свій пароль" />
                                <button type="button" class="password-toggle" aria-label="Показати пароль">
                                    <svg class="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
                                        <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
                                        <line x1="1" y1="1" x2="23" y2="23"/>
                                    </svg>
                                    <svg class="eye-closed" style="display:none" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                        <circle cx="12" cy="12" r="3"/>
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="btn-row">
                            <button type="button" class="btn-back" onclick="goToStep(1)" aria-label="Назад">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                                </svg>
                            </button>
                            <button type="button" class="btn-primary btn-wide" onclick="goToStep(3)">Продовжити</button>
                        </div>
                    </form>
                </div>

                <!-- Крок 3: Успіх -->
                <div id="step-3" style="display: none;">
                    <div class="step-indicator">
                        <div class="step-item completed">1</div>
                        <div class="step-item completed">2</div>
                        <div class="step-item active">3</div>
                    </div>

                    <div class="success-icon">
                        <svg fill="none" stroke="white" viewBox="0 0 24 24" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>

                    <h1 class="auth-title">Пароль змінено!</h1>
                    <p class="auth-subtitle">Ваш пароль було успішно оновлено. Тепер ви можете увійти з новим паролем.</p>

                    <div class="btn-center">
                        <a href="@Url.Action("Login", "Account")" class="btn-primary">Увійти</a>
                    </div>
                </div>

            </div>
        </div>
    </main>
</div>

@section Scripts {
<script>
    function goToStep(step) {
        document.getElementById('step-1').style.display = 'none';
        document.getElementById('step-2').style.display = 'none';
        document.getElementById('step-3').style.display = 'none';
        document.getElementById('step-' + step).style.display = 'block';
    }
</script>
}